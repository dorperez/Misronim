<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Misronim" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_main_color</item>
        <item name="colorPrimaryVariant">@color/dark_main_color_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_secondary_color</item>
        <item name="colorSecondaryVariant">@color/dark_secondary_color_dark</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:fontFamily">@font/quicksand</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Misronim.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="dialogStyle" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Text Color for Buttons -->
        <item name="colorPrimary">@color/dark_dialog_color</item>
    </style>

    <style name="Theme.Misronim.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Misronim.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>